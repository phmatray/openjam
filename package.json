    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "connect-ensure-login": "^0.1.1",
    "connect-mongo": "^2.0.1",
    "cors": "^2.8.4",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "express-sslify": "^1.2.0",
    "find-or-create": "^1.1.0",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.2",
    "morgan": "^1.9.1",
    "octonode": "^0.9.4",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-github2": "^0.1.11",
